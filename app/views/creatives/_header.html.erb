<header>
    <div class="header-content">
    <%= render 'common/alert' %>
      <% if current_user != nil && user_signed_in? %>
        <div class="row">
            <div class="col-lg-6 col-md-6 text-center">
                <div class="service-box">
                    <a href="/stations/<%= current_user.station.id %>">
                        <i class="fa fa-4x fa-map-pin wow bounceIn text-primary"></i>
                        <h3>服を最寄り駅から探す</h3>
                    </a>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 text-center">
                <div class="service-box">
                    <a href="/usearch">
                        <i class="fa fa-4x fa-users wow bounceIn text-primary"></i>
                        <h3>近くの人のクローゼットを見る</h3>
                    </a>
                </div>
            </div>
            </div>
            <div class="col-lg-6 col-md-6 text-center">
                <div class="service-box">
                    <a href="users/<%= current_user.id %>">
                        <i class="fa fa-4x fa-user wow bounceIn text-primary"></i>
                        <h3>自分のクローゼットを見る</h3>
                    </a>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 text-center">
                <div class="service-box">
                    <a href="users/<%= current_user.id %>/edit">
                        <i class="fa fa-4x fa-pencil-square-o wow bounceIn text-primary"></i>
                        <h3>ユーザー情報を編集する</h3>
                    </a>
                </div>
            </div>
        </div>
      <% else %>
        <div class="header-content-inner">
            <h1>ようこそ、??? へ！</h1>
            <hr>
            <p>
            <%= link_to "ログイン", new_user_session_path, :class => "btn btn-primary btn-xl page-scroll" %>　
            <%= link_to "新規登録",new_user_registration_path, :class => "btn btn-primary btn-xl page-scroll" %>
            </p>
            <a href="#about" class="btn btn-primary btn-xl page-scroll">詳しく！</a>
        </div>
      <% end %>
    </div>
</header>

